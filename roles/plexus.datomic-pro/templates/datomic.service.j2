[Unit]
Description=Datomic Service
After=postgresql.service

[Service]
Type=simple
User=datomic
ExecStart={{ datomic_dir }}/runtime/bin/transactor -Xms{{ datomic_transactor_initial_heap }} -Xmx{{ datomic_transactor_max_heap }} {{ datomic_dir }}/datomic-transactor.properties
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
